generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model Store {
  id          String @id @default(uuid())
  shop        String @unique
  accessToken String

  returns ReturnRequest[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ReturnRequest {
  id        String       @id @default(uuid())
  orderId   String
  orderName String
  email     String
  status    ReturnStatus @default(REQUESTED)

  storeId String
  store   Store  @relation(fields: [storeId], references: [id], onDelete: Cascade)

  items ReturnItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([orderId, storeId])
  @@index([orderName])
}

model ReturnItem {
  id        String  @id @default(uuid())
  returnId  String
  productId String
  variantId String?
  title     String
  quantity  Int

  returnRequest ReturnRequest @relation(fields: [returnId], references: [id], onDelete: Cascade)
}

enum ReturnStatus {
  REQUESTED
  APPROVED
  DECLINED
}
